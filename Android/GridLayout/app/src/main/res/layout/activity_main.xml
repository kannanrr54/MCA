<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dis"
            android:textSize="20dp">
        </TextView>
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:columnCount="4">
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="+"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="-"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="*"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="/"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="9"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="8"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="7"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="AC"
            android:onClick="clear">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="6"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="5"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="4"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="="
            android:onClick="result">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="3"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="2"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="1"
            android:onClick="click">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="0"
            android:onClick="click">
        </Button>
    </GridLayout>

</GridLayout>