<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
    </GridLayout>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:columnCount="4">
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="+">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="-">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="*">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="/">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="9">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="8">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="7">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="AC">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="6">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="5">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="4">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="=">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="3">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="2">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="1">
        </Button>
        <Button
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:text="0">
        </Button>
    </GridLayout>

</GridLayout>